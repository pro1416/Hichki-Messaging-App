<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/friendListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="@color/blacky"
        android:textSize="22sp"/>


    <TextView
        android:id="@+id/friendListMemberID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendListName"
        android:textColor="#4D4C4C"
        android:layout_marginLeft="10dp"
        android:text="Member ID"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/friendListEmailID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendListMemberID"
        android:layout_marginLeft="10dp"
        android:text="Email ID"
        android:layout_marginBottom="8dp"
        android:textColor="#4D4C4C"
        android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.35dp"
                android:background="#000"
                android:layout_below="@+id/friendListEmailID"/>
        </RelativeLayout>

</LinearLayout>